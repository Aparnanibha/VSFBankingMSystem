<body>
	<form asp-action="Login">
		
		<h1 class="text-center"> Login To Your Account </h1>
		<p>


		</p>
		<div class="login-container bg-light text-black">
			<div class="col-sm-3"> </div>
			<div class="col-sm-6">
				<div class="panel panel-primary">
					<div class="panel-heading">  </div>

					<div class="panel-body">
						<div class="row">
							@*<div class="col-sm-12">
							*@
							<div class="form-group">
								<label asp-for="UserId" class="control-label" style="left:50%; position:relative;margin-top:20% "></label>
								<input asp-for="UserId" class="form-control" style="left:50%; position:relative; " />
							</div>

							<div class="form-group">
								<label asp-for="Password" class="control-label" style="left:50%; position:relative; "></label>
								<input asp-for="Password" class="form-control" style="left:50%; position:relative; " />

							</div>

							<div class="form-group">
								<input type="submit" value="Login" class="btn btn-primary" style="left:50%; position:relative; " />
							</div>

							@*</div>*@
						</div>

						<div style="left:50%; position:relative; ">
							<div class="text-center">
								<p>
									First Time User?
									<a asp-controller="User" asp-action="Register">Register</a>
								</p>
							</div>
							<div class="text-center">
								<a asp-controller="User" asp-action="ForgetPassword">Forgot UserId</a>
							</div>
							<div class="text-center">
								<a asp-controller="User" asp-action="ForgetPassword">Forgot Password</a>
							</div>
						</div>
					</div>

				</div>
			</div>
			<div class="col-sm-3">  </div>

		</div>
	</form>
